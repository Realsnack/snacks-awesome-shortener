meta {
  name: GET /health
  type: http
  seq: 2
}

get {
  url: {{base_url}}/health
  body: none
  auth: inherit
}

assert {
  res.status: eq 200
  res.body: isJson
  res.body.services.redis.details.ping: eq PONG
  res.body.services.mongo.details.ping: contains ok
}

settings {
  encodeUrl: true
  timeout: 0
}
