meta {
  name: POST /short - valid
  type: http
  seq: 1
}

post {
  url: {{base_url}}/short
  body: json
  auth: inherit
}

body:json {
  {
    "url": "https://shorts.michalsvacina.cz/"
  }
}

assert {
  res.status: eq 200
  res.body: isJson
  res.body.long_url: eq https://shorts.michalsvacina.cz/
  res.body.short_url: length 6
}

settings {
  encodeUrl: true
  timeout: 0
}
